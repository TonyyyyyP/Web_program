    <script>
        function updateClock() {
            var now = new Date();
            var options = { timeZone: "Asia/Ho_Chi_Minh" }; // Sử dụng múi giờ GMT+7

            // Định dạng ngày tháng
            var days = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];
            var months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            var day = days[now.getDay()];
            var month = months[now.getMonth()];
            var date = now.getDate();
            var year = now.getFullYear();

            // Định dạng giờ phút giây
            var hours = now.getHours();
            var minutes = now.getMinutes();
            var seconds = now.getSeconds();

            // Đảm bảo rằng phút và giây luôn có 2 chữ số
            minutes = minutes < 10 ? "0" + minutes : minutes;
            seconds = seconds < 10 ? "0" + seconds : seconds;

            var formattedDate = day + ", " + month + " " + date + ", " + year;
            var formattedTime = hours + ":" + minutes + ":" + seconds;

            document.getElementById('datetime').innerHTML = formattedDate;
            document.getElementById('clock').innerHTML = "Current Time: " + formattedTime;
        }

        setInterval(updateClock, 1000); // Cập nhật mỗi giây
        updateClock(); // Hiển thị thời gian ngay khi load trang
    </script>
