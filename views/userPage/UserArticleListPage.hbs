<!-- UserArticleList -->
<div class="container-fluid pt-5">
  <div class="container">
    <div class="row">
      <!-- SideBar -->
      <div class="col-12 col-sm-12 col-md-3 col-lg-3 sideBar">
        <div>
          <div class="heading">Quản lý tài khoản</div>
          <div class="py-2 pl-2">
            <a href="/nguoidung/thongtin"><div class="cursor-pointer">Thông tin</div></a>
          </div>
        </div>
        <div>
          <div class="heading">Quản lý bài viết</div>
          <div class="py-2 pl-2">
            {{#if (eq authUser.permission "writer")}}
            <a href="/nguoidung/thembaiviet"><div class="pb-2 cursor-pointer">Thêm bài viết</div></a>
            {{/if}}
            <a href="/nguoidung/danhsachbaiviet"><div class="cursor-pointer select">Bài viết của bạn</div></a>
          </div>
        </div>
      </div>
      <!-- Article list Section -->
      <div class="col-12 col-sm-12 col-md-9 col-lg-9 article">
        <table class="table-custom">
          <thead>
            <tr>
              <th class="text-black">ID</th>
              <th class="text-black">Ảnh</th>
              <th class="text-black">Tiêu đề</th>
              <th class="text-black">Ngày đăng</th>
              <th class="text-black">Trạng thái</th>
              <th class="text-black">Hành động</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>1</td>
              <td>
                <img src="./img/news-110x110-1.jpg" alt="Article Image" />
              </td>
              <td>Tiêu đề bài viết</td>
              <td>2024-12-12</td>
              <td>
                <span class="status-badge status-pending">Đang duyệt</span>
              </td>
              <td class="action-buttons">
                <button class="btn btn-sm btn-primary">Xem</button>
                <button class="btn btn-sm btn-secondary">Chỉnh sửa</button>
              </td>
            </tr>
            <tr>
              <td>2</td>
              <td>
                <img src="./img/news-110x110-2.jpg" alt="Article Image" />
              </td>
              <td>Tiêu đề bài viết</td>
              <td>2024-12-11</td>
              <td>
                <span class="status-badge status-rejected">Bị từ chối</span>
              </td>
              <td class="action-buttons">
                <button class="btn btn-sm btn-primary">Xem</button>
                <button class="btn btn-sm btn-danger">Lý do bị từ chối</button>
                <button class="btn btn-sm btn-secondary">Chỉnh sửa</button>
              </td>
            </tr>
            <tr>
              <td>3</td>
              <td>
                <img src="./img/news-110x110-3.jpg" alt="Article Image" />
              </td>
              <td>Tiêu đề bài viết</td>
              <td>2024-12-10</td>
              <td>
                <span class="status-badge status-approved">Đã duyệt</span>
              </td>
              <td class="action-buttons">
                <button class="btn btn-sm btn-primary">Xem</button>
              </td>
            </tr>
            <tr>
              <td>3</td>
              <td>
                <img src="./img/news-110x110-3.jpg" alt="Article Image" />
              </td>
              <td>Tiêu đề bài viết</td>
              <td>2024-12-10</td>
              <td>
                <span class="status-badge status-approved">Đã duyệt</span>
              </td>
              <td class="action-buttons">
                <button class="btn btn-sm btn-primary">Xem</button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
