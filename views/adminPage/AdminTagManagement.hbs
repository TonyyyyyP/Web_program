<!-- TagManagement -->
<div class="container-fluid pt-5">
  <div class="container">
    <div class="row">
      <!-- SideBar -->
      <div class="col-12 col-sm-12 col-md-3 col-lg-3 sideBar">
        <div>
          <div class="heading">Quản lý website</div>
          <div class="py-2 pl-2">
            <a href="/quantrivien/quanlydanhmuc"><div
                class="pb-2 cursor-pointer"
              >Quản lý danh mục</div></a>
            <a href="/quantrivien/quanlytag"><div
                class="pb-2 cursor-pointer select"
              >Quản lý tag</div></a>
            <a href="/quantrivien/quanlybaibao"><div
                class="pb-2 cursor-pointer"
              >Quản lý bài viết</div></a>
          </div>
        </div>
        <div>
          <div class="heading">Quản lý người dùng</div>
          <div class="py-2 pl-2">
            <a href="/quantrivien/quanlynguoidung"><div
                class="pb-2 cursor-pointer"
              >Người dùng</div></a>
          </div>
        </div>
      </div>
      <!-- Add categiry managemet Section -->
      <div class="col-12 col-sm-12 col-md-9 col-lg-9">
        <div>
          <div class="text-black mb-3">Tìm kiếm Tag:</div>
          <div class="input-group" style="width: 100%; max-width: 300px">
            <input
              type="text"
              class="form-control border-0"
              placeholder="Từ khóa"
            />
            <div class="input-group-append">
              <button
                class="input-group-text bg-primary text-dark border-0 px-3"
              >
                <i class="fa fa-search"></i>
              </button>
            </div>
          </div>
        </div>
        <div class="mt-4 mb-3 d-flex justify-content-end">
          <button
            class="btn btn-primary font-weight-bold px-3"
            data-bs-toggle="modal"
            data-bs-target="#addTagModal"
          >
            Thêm Tag
          </button>
        </div>
        <div>
          <table class="table-custom table">
            <thead>
              <tr>
                <th class="text-black">ID</th>
                <th class="text-black">Tên danh mục</th>
                <th class="text-black">Hành động</th>
              </tr>
            </thead>
            <tbody>
              {{#each tags}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.name}}</td>
                  <td class="action-buttons">
                    <button
                      class="btn btn-sm btn-primary"
                      data-bs-toggle="modal"
                      data-bs-target="#updateTagModal"
                      onclick="openUpdateTagModal('{{this.id}}')"
                    >Chỉnh sửa</button>
                    <button
                      class="btn btn-sm btn-danger"
                      data-bs-toggle="modal"
                      data-bs-target="#deleteTagModal"
                      onclick="openDeleteTagModal('{{this.id}}')"
                    >Xóa</button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add tag -->
<div
  class="modal fade"
  id="addTagModal"
  tabindex="-1"
  aria-labelledby="addTagModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title"
          id="addTagModalLabel"
          data-bs-toggle="modal"
          data-bs-target="#addTagModal"
        >Thêm danh mục</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          id="addTagForm"
          action="javascript:void(0)"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group mb-3">
            <label for="tagName" class="form-label font-weight-bold text-black">Tên
              danh mục</label>
            <input
              type="text"
              class="form-control"
              id="tagName"
              name="tagName"
              placeholder="Nhập tên danh mục"
              required
            />
          </div>
          <div class="d-flex justify-content-end">
            <button
              type="submit"
              class="btn btn-primary font-weight-bold px-4"
            >Thêm</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Update tag -->
<div
  class="modal fade"
  id="updateTagModal"
  tabindex="-1"
  aria-labelledby="updateTagModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title"
          id="updateTagModalLabel"
          data-bs-toggle="modal"
          data-bs-target="#updateTagModal"
        >Chỉnh sửa danh mục
        <input type="hidden" id="updateTagId" />
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form
          id="updateTagForm"
          action="javascript:void(0)"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="form-group mb-3">
            <label
              for="updateTagName"
              class="form-label font-weight-bold text-black"
            >Tên danh mục</label>
            <input
              type="text"
              class="form-control"
              id="updateTagName"
              name="updateTagName"
              placeholder="Nhập tên danh mục"
              required
            />
          </div>
          <div class="d-flex justify-content-end">
            <button
              type="submit"
              class="btn btn-primary font-weight-bold px-4"
            >Chỉnh sửa</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete tag -->
<div
  class="modal fade"
  id="deleteTagModal"
  tabindex="-1"
  aria-labelledby="deleteTagModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteTagModalLabel">Xóa danh mục</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa danh mục với ID:
          <span id="deleteTagId" class="fw-bold text-danger"></span>?</p>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Hủy</button>
        <button
          type="button"
          id="confirmDeleteButton"
          class="btn btn-primary"
        >Xóa</button>
      </div>
    </div>
  </div>
</div>

<script>
  // add Tag
document.getElementById("addTagForm").addEventListener("submit", function (e) {
  e.preventDefault();
  const tagName = document.getElementById("tagName").value;
  const formData = new FormData();
  formData.append("name", tagName);
  fetch(`/tagRouter/addTag`, { 
    method: "POST", 
    body: formData,
    })
    .then((response) => response.json())
    .then((data) => {
      alert(data.message);
    })
    .catch((error) => {
      console.error("Error:", error);
    });
});

// update Tag
async function openUpdateTagModal(id) {
  try {
    const response = await fetch(`/tagRouter/${id}`);
    const tag = await response.json();
    console.log(tag);
    document.getElementById("updateTagId").value = tag.id;
    document.getElementById("updateTagName").value = tag.name;
  } catch (error) {
    console.error("Lỗi khi lấy dữ liệu danh mục:", error);
    alert("Không thể mở modal cập nhật danh mục!");
  }
}

document
  .getElementById("updateTagForm")
  .addEventListener("submit", function (e) {
    e.preventDefault();

    const tagId = document.getElementById("updateTagId").value;
    const tagName = document.getElementById("updateTagName").value;
    const formData = new FormData();
    formData.append("id", tagId);
    formData.append("name", tagName);

    fetch("/tagRouter/update", {
      method: "POST",
      body: formData,
    })
      .then((response) => response.json())
      .then((data) => {
        alert(data.message);
      })
      .catch((error) => {
        console.error("Error:", error);
      });
  });

//   delete Tag
function openDeleteTagModal(id) {
  document.getElementById("deleteTagId").textContent = id;
  const confirmDeleteButton = document.getElementById("confirmDeleteButton");
  confirmDeleteButton.onclick = function () {
    deleteTag(id);
  };
}

function deleteTag(id) {
  fetch(`/tagRouter/delete/${id}`, {
    method: "DELETE",
  })
    .then((response) => response.json())
    .then((data) => {
      alert(data.message || "Xóa Tag thành công!");
      const deleteModal = bootstrap.Modal.getInstance(
        document.getElementById("deleteTagModal")
      );
      deleteModal.hide();
      location.reload();
    })
    .catch((error) => {
      console.error("Error:", error);
      alert("Có lỗi xảy ra, vui lòng thử lại!");
    });
}

</script>